@model dynamic
<h2>Login</h2>
<form method="post">
    <div>
        <label>Email</label>
        <input type="email" name="email" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color: red">
            @Html.ValidationSummary()
        </div>
    }
</form>